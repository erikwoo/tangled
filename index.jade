doctype html5
html
	head
		title tangled
	body
		<<clock
			h3= new Date()
				&
					fixed top left 1em
					font-size 20px
					color steelblue
					opacity .9

		each item in [1,2,3,4,5]
			p= item
				&
					display inline-block
					margin 1em

		::clock
			setInterval refresh.clock, 1000

		::
			d3 = require 'd3'
			d3.selectAll('p').data([1..5]).style "font-size", (d)->
				Math.pow(2,d+2) + "px"

			require 'clock'